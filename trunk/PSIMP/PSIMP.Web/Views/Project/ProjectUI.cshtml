@using Ext.Net
@using Ext.Net.MVC
@{
    Layout = null;
}
@(Html.X().TreePanel()
      .Region(Region.West)
      .Title("所有项目")
      .AutoScroll(true)
      .Collapsible(true)
      .Split(true)
      .Width(150)
      .RootVisible(false)
      .Root(
            Html.X()
                .Node()
                .Text("Root")
                .NodeID("root")
                .Children(nodes => {
                    nodes.Add(Html.X().Node().Text("XXX工程(K111-K222)").NodeID("Project1").Icon(Icon.Package).Leaf(true));
                })
      )
)
@(Html.X().TabPanel()
      .Region(Region.Center)
      .Items(
            Html.X().Panel().Title("项目概况"),
            Html.X().Panel().Title("合同段信息"),            
            Html.X().Panel().Title("施工单位"),            
            Html.X().Panel().Title("挂靠监理单位")
      )
)