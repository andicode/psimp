@{
    Layout = null;
}   
@(
Html.X().Panel()
    .Layout(LayoutType.Fit)
    .TopBar(
        Html.X().Toolbar()           
            .Items(
                Html.X().Button().Text("导出").Icon(Icon.PageExcel),
                Html.X().Button().Text("打印").Icon(Icon.Printer),
                Html.X().ToolbarSeparator(),
                Html.X().Button().Text("刷新").Icon(Icon.TableRefresh),
                Html.X().ToolbarFill(),
                Html.X().Button().Text("查询条件").Icon(Icon.Magnifier)
            )
    ).Items(
        Html.X().DataView()
            .EmptyText("没有相关数据") 
            .ItemSelector("tr.customer-record")
            .Padding(5)
            .AutoScroll(true)
            .Tpl(
                Html.X().XTemplate()
                    .Html(
                    @<text>                  
                        <div class="report-ct" style="width:1175px;">
					        <div class="header">
						        <h1>人事台账一览表</h1>   
                                <p>日期：@DateTime.Now.ToString("yyyy-M-d")</p>                                                                     
					        </div>
					        <table>
						        <tr>
							        <th rowspan="2">投标资格要求</th>
							        <th rowspan="2">监理职务</th>
							        <th rowspan="2">变更人员罚款标准(万元)</th>
							        <th>合同人员</th>
							        <th colspan="2">第一次变更</th>
							        <th colspan="2">第二次变更</th>
							        <th colspan="2">第三次变更</th>
							        <th rowspan="2">最后一次变更在岗人员情况</th>
							        <th rowspan="2">是否注册</th>
							        <th rowspan="2">备注</th>
						        </tr>
					            <tr>
                                   <th>2011.11.11</th>
                                    <th>万利万达工字【2012】68号</th>
                                    <th>2012.9.17</th>
                                    <th>万利万达工字【2013】11号</th>
                                    <th>2013.3.20</th>
                                    <th></th>
                                    <th></th>
					            </tr>
						        <tpl for=".">                                          
                                    <tr class="customer-record">
								        <td>&nbsp;{ContactName}</td>
								        <td>&nbsp;{Address}</td>
								        <td>&nbsp;{City}</td>
								        <td>&nbsp;{Region}</td>
								        <td>&nbsp;{PostalCode}</td>
								        <td>&nbsp;{Country}</td>
								        <td>&nbsp;{ContactName}</td>
								        <td>&nbsp;{Address}</td>
								        <td>&nbsp;{City}</td>
								        <td>&nbsp;{Region}</td>
								        <td>&nbsp;{PostalCode}</td>
								        <td>&nbsp;{Country}</td>
								        <td>&nbsp;{Country}</td>
							        </tr>                                          					
						        </tpl>                    
					        </table>
				        </div>
                    </text>
                    )
            )
     )
)