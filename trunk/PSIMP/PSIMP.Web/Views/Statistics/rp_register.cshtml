@{
    Layout = null;
}   
@(
Html.X().Panel()
    .Layout(LayoutType.Fit)
    .TopBar(
        Html.X().Toolbar()           
            .Items(
                Html.X().Button().Text("导出").Icon(Icon.PageExcel),
                Html.X().Button().Text("打印").Icon(Icon.Printer),
                Html.X().ToolbarSeparator(),
                Html.X().Button().Text("刷新").Icon(Icon.TableRefresh),
                Html.X().ToolbarFill(),
                Html.X().Button().Text("查询条件").Icon(Icon.Magnifier)
            )
    ).Items(
        Html.X().DataView()
            .EmptyText("没有相关数据") 
            .ItemSelector("tr.customer-record")
            .Padding(5)
            .AutoScroll(true)
            .Tpl(
                Html.X().XTemplate()
                    .Html(
                    @<text>                  
                        <div class="report-ct" style="width:1660px;">
					        <div class="header">
						        <h1>注册情况统计表</h1>   
                                <p>日期：@DateTime.Now.ToString("yyyy-M-d")</p>                                                                     
					        </div>
					        <table>
						        <tr>
							        <th rowspan="2">所在项目</th>
							        <th rowspan="2">招标文件岗位</th>
							        <th rowspan="2">变更后人员</th>
							        <th colspan="4">实际在岗人员</th>
							        <th rowspan="2">注册单位</th>
							        <th rowspan="2">旧库注册情况</th>
							        <th rowspan="2">新库注册情况</th>
							        <th colspan="7">证件提交情况</th>
							        <th rowspan="2">不能注册原因</th>
							        <th rowspan="2">备注</th>
						        </tr>	
                                <tr>
							        <th>姓名</th>
							        <th>岗位</th>
							        <th>身份证号</th>
							        <th>持证情况</th>
							        <th>身份证</th>
							        <th>毕业证</th>
							        <th>职称证</th>
							        <th>监理证</th>
							        <th>安全培训证</th>
							        <th>环保培训证</th>
							        <th>2寸白底照片</th>
						        </tr>					           
						        <tpl for=".">                                          
                                    <tr class="customer-record">
								        <td>&nbsp;{ContactName}</td>
								        <td>&nbsp;{Address}</td>
								        <td>&nbsp;{City}</td>
								        <td>&nbsp;{Region}</td>
								        <td>&nbsp;{PostalCode}</td>
								        <td>&nbsp;{Country}</td>
								        <td>&nbsp;{ContactName}</td>
								        <td>&nbsp;{Address}</td>
								        <td>&nbsp;{City}</td>
								        <td>&nbsp;{Region}</td>
								        <td>&nbsp;{PostalCode}</td>
								        <td>&nbsp;{Country}</td>
								        <td>&nbsp;{Country}</td>
								        <td>&nbsp;{Country}</td>
								        <td>&nbsp;{Country}</td>
							        </tr>                                          					
						        </tpl>                    
					        </table>
				        </div>
                    </text>
                    )
            )
     )
)