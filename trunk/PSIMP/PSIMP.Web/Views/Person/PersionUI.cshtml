@model PSIMP.Web.Models.PersonModel
@using Ext.Net.MVC
@{
    Layout = null;
}
@(Html.X()
    .GridPanelFor<PSIMP.Web.Models.PersonModel>()
    .Frame(true)
    .TopBar(Html.X().Toolbar().Items(items => {
        items.Add(Html.X()
                    .Button()
                    .Text("新增人员")
                    .DirectEvents(events => {
                        events.Click.DisableControl = true;
                        events.Click.Url = Url.Action("Create");
                    })
             );
    }))
    .BottomBar(Html.X().PagingToolbar())
)