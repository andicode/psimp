@model IEnumerable< PSIMP.Models.PM_PersonBaseInfo>

@(Html.X().GridPanelFor(Model)
          .Control(grid =>
          {
              grid.ColumnModel.Columns.Insert(0,
                  Html.X().ComponentColumn().Text("操作").Width(124).Align(Alignment.Center)
                  .Component(
                        Html.X().Container().Layout(LayoutType.HBox)
                            .Items(
                                Html.X().Button().Text("编辑").Icon(Icon.PageEdit).Handler("person.edit(this.up('container').record.data.Id)"),

                                Html.X().Button().Text("删除").Icon(Icon.PageEdit).Handler("person.del(this.up('container').record.data.Id)")
                            )
                  )
              );
          })
          .EmptyText("没有人员记录")
          .BottomBar(Html.X().PagingToolbar())
)