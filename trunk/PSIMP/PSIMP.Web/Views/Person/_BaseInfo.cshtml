@using Ext.Net.MVC
@using Ext.Net
@model PSIMP.Web.Models.PersonModel
@{
    Layout = null;
}
@(Html.X()
    .Container()
    .Border(false)
    .Width(130)
    .Padding(5)
    .Region(Region.West)
    .Items(Html.X()
            .FieldSet()
            .Frame(true)
            .Title("一寸照片")
            .Width(120)
            .Height(180)
            .Layout(LayoutType.Fit)
            .Items(Html.X()
                    .Image()
                    .ImageUrl(Model.Picture ?? Url.Content("~/Images/default_image_male.jpg"))
            )
    )
)
@(Html.X()
    .Panel()
    .Frame(true)
    .Border(false)
    .Header(false)
    .BodyPadding(10)
    .Region(Region.Center)
    .Items(Html.X().HiddenFor(m => m.Id)
            , Html.X().TextFieldFor(m => m.Name)
            , Html.X().ComboBoxFor(m => m.Sex).Editable(false).ItemsFromEnum(typeof(PSIMP.Web.Models.Enums.Sex))
            , Html.X().NumberFieldFor(m => m.Height)
            , Html.X().TextFieldFor(m => m.Census)
            , Html.X().TextFieldFor(m => m.IDCard)
            , Html.X().NumberFieldFor(m => m.Age)
            , Html.X().TextFieldFor(m => m.Telephone)
            , Html.X().TextFieldFor(m => m.Email)
    )
)
