@using Ext.Net
@using Ext.Net.MVC
@model PSIMP.Models.Person
@{
    Layout = null;
}
@(Html.X()
    .Window()
    .ID("Person_Create_Window")
    .Title("人员信息")
    .CloseAction(CloseAction.Destroy)
    .ConstrainHeader(true)
    .ConstrainToElement("mainBody")
    .Width(768)
    .Height(520)
    .Layout(Ext.Net.LayoutType.Border)
    .ItemsFromPartial("_PersonForm", Model)
    .Listeners(events => {
        events.Show.Handler = "this.up('window').mask()";
        events.Close.Handler = "this.up('window').unmask()";
    })
)