@using Ext.Net.MVC
@using Ext.Net
@model PSIMP.Web.Models.PersonModel
@{
    Layout = null;
}
@(Html.X()
    .MenuPanel()
    .ID("Person_MenuPanel")
    .Width(150)
    .Region(Region.West)
    .SelectedIndex(0)
    .Menu(menus =>
    {
        menus.Items.Add(Html.X().MenuItem().Text("基本信息").Listeners(l => l.Click.Handler = "App.Person_Card.getLayout().setActiveItem(0)"));
        menus.Items.Add(Html.X().MenuItem().Text("注册信息").Listeners(l => l.Click.Handler = "App.Person_Card.getLayout().setActiveItem(1)"));
        menus.Items.Add(Html.X().MenuItem().Text("教育背景").Listeners(l => l.Click.Handler = "App.Person_Card.getLayout().setActiveItem(2)"));
        menus.Items.Add(Html.X().MenuItem().Text("培训经历").Listeners(l => l.Click.Handler = "App.Person_Card.getLayout().setActiveItem(3)"));
        menus.Items.Add(Html.X().MenuItem().Text("工作经历").Listeners(l => l.Click.Handler = "App.Person_Card.getLayout().setActiveItem(4)"));
        menus.Items.Add(Html.X().MenuItem().Text("证书证件").Listeners(l => l.Click.Handler = "App.Person_Card.getLayout().setActiveItem(5)"));
    })
)
@(Html.X()
    .Container()
    .ID("Person_Card")
    .Region(Region.Center)
    .Layout(LayoutType.Card)
    .ActiveIndex(0)
    .Items(
        Html.X()
            .FormPanel()
            .Title("基本信息")
            .Layout( LayoutType.Border)
            .Url(Url.Action("Save"))
            .TopBar(Html.X()
                .Toolbar().Items(toolbarItems =>
                {
                    toolbarItems.Add(Html.X()
                                        .Button()
                                        .Text("保存")
                                        .Icon(Icon.Disk)
                                        .Handler("this.up('form').submit();")
                                    );
                }))
            .Defaults(defaults => {
                defaults.Add(new { MsgTarget = "under" });
            })
            .ItemsFromPartial("_BaseInfo", Model),
        Html.X()
            .Panel()
            .Title("注册信息")
            .BodyPadding(10)
            .ItemsFromPartial("_RegisterInfo", Model),
        Html.X()
            .Panel()
            .Title("教育背景")
            .BodyPadding(10)
            .ItemsFromPartial("_EducationInfo", Model),
        Html.X()
            .Panel()
            .Title("培训经历")
            .BodyPadding(10)
            .ItemsFromPartial("_TrainInfo", Model),
        Html.X()
            .Panel()
            .Title("工作经历")
            .BodyPadding(10)
            .ItemsFromPartial("_WorkInfo", Model),
        Html.X()
            .Panel()
            .Title("证书证件")
            .BodyPadding(10)
            .ItemsFromPartial("_CertInfo", Model)
    )
)