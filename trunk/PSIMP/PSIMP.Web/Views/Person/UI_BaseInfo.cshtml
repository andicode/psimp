@{
    Layout = null;
}
@(Html.X().GridPanelFor<PM_PersonBaseInfo>()
          .Title(Html.MvcSiteMap().SiteMapPath("SiteMapPathHelperModel").ToString())
          .DockedItems(
               Html.X().SearchPanel()
                   .Items(
                       Html.X()
                           .TextField()
                           .FieldLabel("姓名")
                           .Width(150)
                           .LabelAlign(LabelAlign.Right)
                           .LabelWidth(35)
                   )
                   .Buttons(
                        Html.X().Button().Text("查询").Icon(Icon.Magnifier).Margins("0 0 0 10")
                   )
          )
          .TopBar(
               Html.X().Toolbar()
                   .Items(
                        Html.X().Button().Text("新增").Icon(Icon.Add).Handler("person.create"),
                        Html.X().ToolbarSeparator(),
                        Html.X().Button().Text("编辑").Icon(Icon.PageEdit).Handler("person.edit"),                        
                        Html.X().Button().Text("删除").Icon(Icon.PageDelete).Handler("person.del")
                 )

          )
          .Control(grid =>
          {
              grid.GetStore().ID = "Person_Store";
          })
          .SelectionModel(Html.X().RowSelectionModel().ID("Person_Sm"))
          .Listeners(evnets =>
          {
              evnets.ItemDblClick.Fn = @"person.details";
          })
          .EmptyText("没有人员记录")
          .BottomBar(Html.X().PagingToolbar())
)