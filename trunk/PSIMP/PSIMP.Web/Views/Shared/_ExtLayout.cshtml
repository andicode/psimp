<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    <script src="~/Scripts/Test.js"></script>
    @Scripts.Render("~/business")
</head>
<body id="mainBody">
@(
 Html.X()
    .ResourceManager()
    .ScriptMode(Ext.Net.ScriptMode.Debug)
    .StartupMask((StartupMask)ViewBag.StartupMask)
    .Listeners(events => {
        events.AjaxRequestException.Handler = "alert('异常')";
    })
)
    @Html.X().ResourcesRegistrator().RegisterAllResources(true)
    @RenderBody()
</body>
</html>
