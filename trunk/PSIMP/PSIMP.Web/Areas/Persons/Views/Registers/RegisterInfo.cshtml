@model PM_PersonRegister
@{
    ViewBag.Title = "RegisterInfo";
}
@(
Html.EditorWindow()
    .ID("Person_Register")
    .Title("人员注册信息")
    .Width(500)
    .CloseAction(CloseAction.Destroy)
    .Layout( LayoutType.Fit)
    .AutoScroll(true)
    .Border(false)
    .ItemsFromPartial("RegisterForm",Model)
    .Buttons(
        Html.X().Button().Text("保存").Icon(Icon.Disk).Handler("alert('数据交互未做')"),
        Html.X().Button().Text("取消").Icon(Icon.Exclamation).Handler("this.up('window').close()")
    )
)