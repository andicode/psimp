@model PSIMP.Models.Account.LoginModel
@{
    ViewBag.Title = "登录";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="second_body">
    <div class="logo">
        logo
    </div>
    <div class="appName">
        <span style="color:#854315">PSIMP</span> <span style="color:#ff6a00">V1</span>
    </div>
    <form id="form-login" action="@Url.Action("Login")" method="post">
        <table style="width: 300px; border: 0">
            <tbody>
                <tr>
                    <td colspan="3">
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                    </td>
                </tr>
                <tr>
                    <td style="width: 55px;"><span>用户名：</span></td>
                    <td colspan="2">
                        @Html.TextBoxFor(m => m.UserName, new { @class = "login" })
                    </td>
                </tr>
                <tr>
                    <td style="width: 55px;"></td>
                    <td colspan="2">
                        @Html.ValidationMessageFor(m => m.UserName)
                    </td>
                </tr>
                <tr>
                    <td style="letter-spacing: 0.5em;">密码：</td>
                    <td colspan="2">
                        @Html.PasswordFor(m => m.Password, new { @class = "login" })
                    </td>
                </tr>
                <tr>
                    <td style="width: 55px;"></td>
                    <td colspan="2">
                        @Html.ValidationMessageFor(m => m.Password)
                    </td>
                </tr>
                <tr>
                    <td>&nbsp;</td>
                    <td colspan="2">
                        <div class="checkbox-warp">
                            @Html.CheckBoxFor(m => m.RememberMe)
                        </div>
                        @Html.LabelFor(m => m.RememberMe, new { @class = "checkbox" })
                    </td>
                </tr>
                <tr style="text-align: center">
                    <td colspan="3">
                        <input type="submit" value="登录" class="login_button"/>
                        <input type="button" value="重置" class="reset_botton" onclick="this.form.reset();"/>
                    </td>
                </tr>

            </tbody>
        </table>
    </form>
</div>
