@{
    Layout = null;
}
@(
 Html.X().GridPanelFor<PM_CertificateManage>()
        .Title(Html.MvcSiteMap().SiteMapPath("SiteMapPathHelperModel").ToString())
        .EmptyText("没有证件信息记录")
        .DockedItems(
               Html.X().SearchPanel()
                   .Items(
                       Html.X()
                           .TextField()
                           .FieldLabel("姓名")
                           .Width(150)
                           .LabelAlign(LabelAlign.Right)
                           .LabelWidth(35)
                   )
                   .Buttons(
                        Html.X().Button().Text("查询").Icon(Icon.Magnifier).Margins("0 0 0 10")
                   )
          )
        .TopBar(
            Html.X().Toolbar()
                .Items(
                    Html.X().Button().Text("新增人员证件信息").Icon(Icon.Add).Handler("person.certificate.create")
                )
        )
        .BottomBar(Html.X().PagingToolbar())
)
@(
Html.EditorWindow()
    .ID("Person_Certificate")
    .Title("人员证件信息")
    .Hidden(true)
    .Width(500)
    .Layout(LayoutType.Fit)
    .AutoScroll(true)
    .Border(false)
    //.ItemsFromPartial("InsuranceForm")
    .Buttons(
        Html.X().Button().Text("保存").Icon(Icon.Disk).Handler("alert('数据交互未做')"),
        Html.X().Button().Text("取消").Icon(Icon.Exclamation).Handler("this.up('window').close()")
    )
)