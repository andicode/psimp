@{
    Layout = null;
}   
@(
Html.X().Panel()
    .Layout(LayoutType.Fit)
    .TopBar(
        Html.X().Toolbar()           
            .Items(
                Html.X().Button().Text("导出").Icon(Icon.PageExcel),
                Html.X().Button().Text("打印").Icon(Icon.Printer),
                Html.X().ToolbarSeparator(),
                Html.X().Button().Text("刷新").Icon(Icon.TableRefresh),
                Html.X().ToolbarFill(),
                Html.X().Button().Text("查询条件").Icon(Icon.Magnifier)
            )
    ).Items(
        Html.X().DataView()
            .EmptyText("没有相关数据") 
            .ItemSelector("tr.customer-record")
            .Padding(5)
            .AutoScroll(true)
            .Tpl(
                Html.X().XTemplate()
                    .Html(
                    @<text>                  
                        <div class="report-ct" style="width:1160px;">
					        <div class="header">
						        <h1>人员证件汇总表</h1>   
                                <p>日期：@DateTime.Now.ToString("yyyy-M-d")</p>                                                                     
					        </div>
					        <table>
						        <tr>
							        <th>档案编号</th>
							        <th>姓名</th>
							        <th>注册日期</th>
							        <th>所在项目</th>
							        <th>在岗情况</th>
							        <th>提交北京中通日期</th>
							        <th>提交证件</th>
							        <th>返还第二事业部日期</th>
							        <th>返还证件</th>
							        <th>返还个人日期</th>
							        <th>返还个人证件</th>
							        <th>备注</th>
						        </tr>					           
						        <tpl for=".">                                          
                                    <tr class="customer-record">
								        <td>&nbsp;{ContactName}</td>
								        <td>&nbsp;{Address}</td>
								        <td>&nbsp;{City}</td>
								        <td>&nbsp;{Region}</td>
								        <td>&nbsp;{PostalCode}</td>
								        <td>&nbsp;{Country}</td>
								        <td>&nbsp;{ContactName}</td>
								        <td>&nbsp;{Address}</td>
								        <td>&nbsp;{City}</td>
								        <td>&nbsp;{Region}</td>
								        <td>&nbsp;{PostalCode}</td>
								        <td>&nbsp;{Country}</td>
							        </tr>                                          					
						        </tpl>                    
					        </table>
				        </div>
                    </text>
                    )
            )
     )
)