@{
    Layout = null;
}   
@(
Html.X().Panel()
    .Layout(LayoutType.Fit)
    .TopBar(
        Html.X().Toolbar()           
            .Items(
                Html.X().Button().Text("导出").Icon(Icon.PageExcel),
                Html.X().Button().Text("打印").Icon(Icon.Printer),
                Html.X().ToolbarSeparator(),
                Html.X().Button().Text("刷新").Icon(Icon.TableRefresh),
                Html.X().ToolbarFill(),
                Html.X().Button().Text("查询条件").Icon(Icon.Magnifier)
            )
    ).Items(
        Html.X().DataView()
            .EmptyText("没有想过数据") 
            .ItemSelector("tr.customer-record")
            .Padding(5)
            .AutoScroll(true)
            .Tpl(
                Html.X().XTemplate()
                    .Html(
                    @<text>                  
                        <div class="report-ct" style="width:1150px;">
					        <div class="header">
						        <h1>意外险汇总表</h1>   
                                <p>日期：@DateTime.Now.ToString("yyyy-M-d")</p>                                                                     
					        </div>
					        <table>
						        <tr>
							        <th>保单号</th>
							        <th>所在项目</th>
							        <th>姓名</th>
							        <th>性别</th>
							        <th>身份证号</th>
							        <th>目前岗位</th>
							        <th>保险起保日期</th>
							        <th>保险截止日期</th>
							        <th>在职状态</th>
							        <th>投保份数</th>
							        <th>保单信息</th>
						        </tr>	                                			           
						        <tpl for=".">                                          
                                    <tr class="customer-record">
								        <td>&nbsp;{ContactName}</td>
								        <td>&nbsp;{Address}</td>
								        <td>&nbsp;{City}</td>
								        <td>&nbsp;{Region}</td>
								        <td>&nbsp;{PostalCode}</td>
								        <td>&nbsp;{Country}</td>
								        <td>&nbsp;{ContactName}</td>
								        <td>&nbsp;{Address}</td>
								        <td>&nbsp;{City}</td>
								        <td>&nbsp;{Region}</td>
								        <td>&nbsp;{PostalCode}</td>
							        </tr>                                          					
						        </tpl>                    
					        </table>
				        </div>
                    </text>
                    )
            )
     )
)